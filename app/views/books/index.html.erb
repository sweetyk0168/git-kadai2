<h1>Books</h1>

<% @books.each do |book| %>
 <h2>Title</h2>
 <span><%= book.title %></span>

   <h2>Body</h2>
   <span><%= book.body %></span>
  <% end %>
  <%= link_to "Show", "books/:id" %>
  <a href="/books/edit">Edit</a>
  <%= link_to "Destroy", destroy_list_path(@book.id), method: delete, "data-confirm" => "本当に削除しますか？" %>
 <h3>New Book</h3>
 <%= form_with model: @book do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>
 <h5>Body</h5>
  <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>

